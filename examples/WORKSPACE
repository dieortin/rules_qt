    name = "com_github_kklochkov_rules_qt",
    path = "../",
)

load("@com_github_kklochkov_rules_qt//qt:repositories.bzl", "rules_qt_dependencies", "rules_qt_toolchains")

rules_qt_dependencies()

rules_qt_toolchains()

